{
    "name": "hkreuter/oxid-customergraph",
    "description": "",
    "type": "oxideshop-module",
    "keywords": [
        "oxid",
        "modules",
        "eShop",
        "GraphQL"
    ],
    "license": [
        "GPL-3.0"
    ],
    "extra": {
        "oxideshop": {
            "target-directory": "hkreuter/oxid-customergraph"
        }
    },
    "prefer-stable": true,
    "prefer-dist": true,
    "require": {
        "php": "^7.4 | ^8.0",
        "oxid-esales/graphql-base": "^6.0.1",
        "oxid-esales/graphql-storefront": "^2.0.1",
        "hkreuter/graphql-upload": "dev-4.1.0-php8",
        "oxid-esales/oxideshop-doctrine-migration-wrapper": "^v3.2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.5.20|^8.5|^9",
        "friendsofphp/php-cs-fixer": "^2.18.2",
        "php-parallel-lint/php-parallel-lint": "^1.1",
        "phpstan/phpstan": "^0.12.26",
        "oxid-esales/oxideshop-ce": "^v6.10.0",
        "oxid-esales/oxideshop-unified-namespace-generator": "^2.0",
        "qossmic/deptrac-shim": "^0.9.0|^0.10.0",
        "codeception/module-rest": "^1.4.2",
        "codeception/module-phpbrowser": "^1.0.2",
        "codeception/module-db": "^1.1.0"
    },
    "autoload": {
        "psr-4": {
            "Hkreuter\\GraphQL\\CustomerGraph\\": "src/",
            "Hkreuter\\GraphQL\\CustomerGraph\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "fix:fixer": "php-cs-fixer fix",
        "fix": [
            "@fix:fixer"
        ],
        "test:lint": "php-cs-fixer fix --dry-run",
        "test:syntax": "parallel-lint src/ tests/ metadata.php",
        "test:static": "phpstan --memory-limit=-1 analyse src/",
        "test:unit": "phpunit -c tests/phpunit.xml tests/Unit/",
        "test:deptrac": "vendor/bin/deptrac analyze depfile.yml",
        "test": [
            "@test:syntax",
            "@test:lint",
            "@test:static",
            "@test:unit",
            "@test:deptrac"
        ]
    }
}
